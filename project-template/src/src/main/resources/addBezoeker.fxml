<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="225.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.AddBezoekerController">
    <children>
        <VBox alignment="CENTER_LEFT" spacing="10.0" layoutX="50.0" layoutY="30.0">

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Naam Bezoeker:" />
                <TextField fx:id="naamField" promptText="naam bezoeker" prefWidth="150.0" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Museum ID:" />
                <ChoiceBox fx:id="museumIDField" prefWidth="150.0" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Button fx:id="addBezoeker" mnemonicParsing="false" text="Voeg bezoeker toe" prefWidth="150.0" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
