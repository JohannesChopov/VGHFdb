<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="225.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.Add.AddMuseumBezoekController">
    <children>
        <VBox alignment="CENTER_LEFT" layoutX="50.0" layoutY="30.0" spacing="10.0">

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Naam Bezoeker:" />
                <TextField fx:id="naamField" prefWidth="150.0" promptText="naam bezoeker" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Museum ID:" />
                <ChoiceBox fx:id="museumIDField" prefWidth="150.0" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <DatePicker fx:id="datumField" layoutX="147.0" layoutY="102.0" prefHeight="26.0" prefWidth="150.0" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0" />

        </VBox>
        <Button fx:id="addBezoeker" layoutX="147.0" layoutY="144.0" mnemonicParsing="false" prefWidth="150.0" text="Voeg bezoeker toe" />
    </children>
</AnchorPane>
