<AnchorPane prefHeight="554.0" prefWidth="810.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.LoginController">
    <!-- Add ImageView for background image -->
    <children>
        <ImageView fitHeight="554.0" fitWidth="810.0">
            <image>
                <!-- Replace 'background.jpg' with your image file -->
                <Image url="@vghf.png" />
            </image>
        </ImageView>

