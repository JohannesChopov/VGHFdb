        <Rectangle fill="#fffdfd" height="84.0" layoutX="244.0" layoutY="30.0" width="320.03125" />
        <Rectangle fill="#e8e4e4" height="82.0" layoutX="245.0" layoutY="31.0" width="318.03125" />


        <!-- Your existing UI components -->
        <Text layoutX="244.0" layoutY="65.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Video Game History Foundation" textAlignment="CENTER" wrappingWidth="320.03125">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
        <Button fx:id="btnLogin" layoutX="345.0" layoutY="291.0" mnemonicParsing="false" prefHeight="21.0" prefWidth="118.0" style="-fx-text-fill: black;" text="Log in" />
