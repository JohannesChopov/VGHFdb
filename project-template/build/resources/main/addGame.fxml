<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="325.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.AddGameController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="20.0">

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Titel:" />
                <TextField fx:id="titelField" alignment="CENTER" prefWidth="150.0" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Genre:" />
                <TextField fx:id="genreField" alignment="CENTER" prefWidth="150.0" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <ListView fx:id="platformListView" accessibleRole="CHECK_BOX" prefHeight="200.0" prefWidth="150.0"  />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Button fx:id="addBtn" mnemonicParsing="false" text="Voeg toe" prefWidth="150.0" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
