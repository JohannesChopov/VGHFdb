<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="225.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.kuleuven.dbproject.controller.AddDonatieController">
    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="50.0" layoutY="20.0">

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Donatie som:" />
                <TextField fx:id="somField" promptText="som" prefWidth="150.0"/>
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Datum van donatie:" />
                <DatePicker fx:id="datumField" promptText="Datum" prefWidth="150.0"/>
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Label text="Museum ID:" />
                <ChoiceBox fx:id="museumIDField" prefWidth="150.0" />
            </HBox>

            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
                <Button fx:id="addDonatie" mnemonicParsing="false" text="Voeg donatie toe" prefWidth="150.0" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
